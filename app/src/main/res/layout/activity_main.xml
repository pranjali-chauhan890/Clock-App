<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6EEEE"
    tools:context=".MainActivity"
    >

    <!-- Top Title -->
    <TextView
        android:id="@+id/alarmTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true" />

    <!-- Clock Image -->
    <ImageView
        android:id="@+id/clockImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/sleeplogo"
        android:layout_below="@id/alarmTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/alarmRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/clockImage"
        android:layout_marginTop="12dp"
        android:padding="16dp"
        android:visibility="gone" />

    <!-- No Alarms Text -->
    <TextView
        android:id="@+id/noAlarmsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No alarms"
        android:textColor="#949191"
        android:textSize="16sp"
        android:layout_below="@id/clockImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Floating Add Button -->
    <ImageButton
        android:id="@+id/fab"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/plussss"
        android:background="@drawable/round_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:contentDescription="Add Alarm" />

    <!-- Bottom Navigation -->
    <include
        layout="@layout/bottom_nav"
         />

</RelativeLayout>